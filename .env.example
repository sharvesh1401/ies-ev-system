# PROJECT SETTINGS
PROJECT_NAME=IES_EV_System
VERSION=0.1.0
ENV=development

# BACKEND SETTINGS
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=info
SECRET_KEY=change_this_in_production_secret_key_12345
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# DATABASE SETTINGS (PostgreSQL)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ies_ev_db
